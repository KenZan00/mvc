{% extends 'base.html.twig' %}

{% block title %}Hello BooksController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    {# <h1>Hello {{ controller_name }}! ✅</h1> #}

    <p>Välkommen till biblioteket.</p>

    <a href="{{ path('library_create')}}">Lägg till böcker</a>
    <a href="{{ path('library_show')}}">Se bibliotek</a>
    

    <h1>{{ book.getTitle|e }}</h1>

    <p>ISBN: {{ book.getIsbn|e }}</p>
    <p>Author: {{ book.getAuthor|e }}</p>

    <a href="{{ asset('img/' ~ book.getPicture|e) }}">
        <img src="{{ asset('img/' ~ book.getPicture|e) }}" alt="Book cover of {{ book.getPicture|e }}" style="max-width: 200px;">
    </a>

    <h3>Edit this book</h3>
    <form action="{{ path('book_by_id_edit', {'id': book.id}) }}" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{ book.getTitle|e }}">
        </div>
        <div>
            <label for="isbn">ISBN:</label>
            <input type="text" id="isbn" name="isbn" value="{{ book.getIsbn|e }}">
        </div>
        <div>
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" value="{{ book.getAuthor|e }}">
        </div>
        <div>
            <label for="picture">Picture:</label>
            <input type="text" id="picture" name="picture" value="{{ book.getPicture|e }}">
        </div>
        <button type="submit">Edit</button>
    </form>

    <form action="{{ path('book_delete_by_id', {'id': book.id}) }}" method="POST">
        <button type="submit">Delete</button>
    </form>


    {% endblock %}
